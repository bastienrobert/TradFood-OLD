<section class="city">
  <div class="head">
    <h1>Recettes sur <%= @city.name %></h1>
  </div>
  </div>
  <div class="search">
    <%= simple_form_for :search, html: {class: "search-bar"}, method: :get do |f| %>
      <div class="field for-type">
        <%= f.input :smcd, label: "Type", collection: {'Tout' => 'all','Entrée' => 'starter','Plat' => 'mainCourse','Dessert' => 'dessert'}, html: {id: "type"}, input_html: {name: "smcd"}, selected: params[:smcd], required: false %>
      </div>
      <div class="field for-type">
        <%= f.input :difficulty, label: "Difficulté", collection: {'Tout' => 'all','Facile' => 1,'Moyen' => 2,'Difficile' => 3}, html: {id: "difficulty"}, input_html: {name: "difficulty"}, selected: params[:difficulty], required: false %>
      </div>
      <div class="field for-type">
        <%= f.input :season, label: "Saison", collection: {'Tout' => 'all','Ete' => 'summer','Automne' => 'automn','Printemps' => 'sping', 'Hiver' => 'winter'}, html: {id: "season"}, input_html: {name: "season"}, selected: params[:season], required: false %>
      </div>
      <%= f.submit 'Filtrer', class: "button" %>
    <% end %>
  </div>
  <h2>Galerie</h2>
  <div class="recipes">
    <div class="container">
      <% if @recipes %>
        <% @recipes.each do |recipe| %>
          <div id="card">
            <div class="content" style="background-image: url(<%= recipe.image.url(:big); %>)">
              <div class="infos">
                <h3><%= recipe.name %></h3>
                <div class="details">
                  <span class="icon star"></span><b><%= recipe.difficulty?(recipe.difficulty) %></b>
                  <span class="icon leaf"></span><b><%= recipe.season?(recipe.season) %></b>
                  <span class="icon cook"></span><b><%= recipe.cook_time?(recipe.cook) %></b>
                </div>
                <%= link_to 'Voir la recette', recipe %>
              </div>
            </div>
          </div>
        <% end %>
        <% else %>
          <h5>Aucun résultat</h5>
      <% end %>
    </div>
  </div>
</section>


