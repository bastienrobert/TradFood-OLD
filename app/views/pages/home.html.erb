<section id="index">
  <div class="head">
    <div class="title">
      <h1>Les meilleures recettes traditionnelles<br>c'est avec <b>TradFood</b></h1>
      <h2>Découvrez nos meilleures recettes, sélectionnées, testées et re-testées !</h2>
      <a href="cities" class="button white">Découvrir</a>
    </div>
  </div>
  <div class="search">
    <%= simple_form_for :search, html: {class: "search-bar__mob"}, url: cities_search_path do |f| %>
      <%= f.input :city, placeholder: "Bordeaux", label: false %>
      <%= f.submit '', :style => "display:none;" %>
    <% end %>

    <%= simple_form_for :search, html: {class: "search-bar"}, url: cities_search_path do |f| %>
      <div class="field for-city stop-bar">
        <%= f.input :city, label: "Ville" , placeholder: "Bordeaux", html: {id: "city", name: "city"}, required: false %>
      </div>

      <div class="field for-type stop-bar">
        <%= f.input :smcd, label: "Type", collection: {'Tout' => 'all','Entrée' => 'starter','Plat' => 'mainCourse','Dessert' => 'dessert'}, html: {id: "type", name: "type"}, selected: "Tout", required: false %>
      </div>

      <div class="field for-type stop-bar">
        <%= f.input :difficulty, label: "Difficulté", collection: {'Tout' => 'all','Facile' => 1,'Moyen' => 2,'Difficile' => 3}, html: {id: "difficulty", name: "difficulty"}, selected: "Tout", required: false %>
      </div>

      <div class="field for-type">
        <%= f.input :season, label: "Saison", collection: {'Tout' => 'all','Ete' => 'summer','Automne' => 'automn','Printemps' => 'sping', 'Hiver' => 'winter'}, html: {id: "season", name: "season"}, selected: "Tout", required: false %>
      </div>

      <%= f.submit 'Rechercher', class: "button" %>

    <% end %>
  </div>
  <div class="cases index-tops top-cities">
    <h3>Les villes a l'affiche</h3>
    <div class="container">
      <% @citiesStared.each do |city| %>
        <%= link_to city do %>
          <span class="bloc" style="background-image:url(<%= city.image.url(:small) %>)">
            <ul>
              <li><%= city.name %></li>
            </ul>
          </span>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="cases index-tops last-recipes">
    <h3>Nos dernières recettes</h3>
    <div class="container">
			<% @recipesLast.each do |recipe| %>
				<%= link_to recipe do %>
					<span class="bloc" style="background-image:url(<%= recipe.image.url(:small) %>)">
						<ul>
							<li><%= recipe.name %></li>
						</ul>
					</span>
				<% end %>
			<% end %>
    </div>
  </div>
  <div class="cases index-tops top-recipes">
    <h3>Les recettes à l'affiche</h3>
    <div class="container">
			<% @recipesStared.each do |recipe| %>
				<%= link_to recipe do %>
					<span class="bloc" style="background-image:url(<%= recipe.image.url(:small) %>)">
						<ul>
							<li><%= recipe.name %></li>
						</ul>
					</span>
				<% end %>
			<% end %>
    </div>
  </div>
</section>
